  
<!-- Starters menu -->
  <section class="section-mainmenu p-t-110 p-b-70 bg1-pattern">
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-lg-6 p-r-35 p-r-15-lg m-l-r-auto">
          <div class="wrap-item-mainmenu p-b-22">
            <h3 class="tit-mainmenu tit10 p-b-25">
              STARTERS
            </h3>
            <br>

            <% @customer_menu.each do |item| %>
            <% if item.section == "Starters"%>
            <!-- Item mainmenu -->
            <div class="item-mainmenu m-b-36">
              <div class="flex-w flex-b m-b-3">
                <a href="#" class="name-item-mainmenu txt20">
                  <%= item.name %>
                </a>
                <div class="line-item-mainmenu bg3-pattern"></div>
                <div class="price-item-mainmenu txt22">
                  <%= number_to_currency item.price%>  
                </div>
              </div>
              <span class="info-item-mainmenu txt23">
                <%= item.description %>
              </span>
              <% if is_next_day? %>
                <% if item.availability == false %>
                <div class="d-inline p-2 bg-primary text-white text-center">ITEM NOT AVAILABLE AT THIS TIME!</div>
                <% else %>
                <div class="d-inline p-2 bg-primary text-white text-center">NO DELIVERIES BETWEEN 12AM - 2AM!</div>
                <% end %> 
              <% elsif item.availability %>
              <p><%= button_to "Add to Cart", "#", class: "btn btn-sm btn-primary"  %></p>
              <% else %>               
                <div class="d-inline p-2 bg-primary text-white text-center">ITEM NOT AVAILABLE AT THIS TIME!</div>
              <% end %> 
            </div>
            <% end %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
